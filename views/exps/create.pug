extends ../base.pug

block content
  h3 Creat Experiment
  form(method="POST")
    fieldset
      legend Passcode
      input(type="text" name="passcode" value=experiment.passcode)
    br

    fieldset
      legend Number of participants
      input(type="number" name="partSize" value=experiment.partSize)
    br

    fieldset
      legend Number of rounds
      input(type="number" name="numRounds" value=experiment.numRounds)
    br

    fieldset
      legend Kick
      input(type="radio" name="kickEnabled" value="false" checked)
      |Disable
      input(type="radio" name="kickEnabled" value="true")
      |Enable
    br

    fieldset
      legend Fake reputation
      input(type="radio" name="fakeReputationEnabled" value="false" checked)
      |Disable
      input(type="radio" name="fakeReputationEnabled" value="true")
      |Enable

    input(type="submit" value="Create")
